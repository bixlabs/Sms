<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="uy.com.bix.app.smsproject.activity.SettingsActivity"
                android:background="#ffffff">

  <Switch
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/settings_toggle"
    android:id="@+id/active_switch"
    android:checked="false"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/notify_checkBox"
    android:layout_toEndOf="@+id/notify_checkBox"/>

  <EditText
    android:id="@+id/editTextPhone"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:ems="10"
    android:hint="@string/hint_telephone_num"
    android:inputType="phone"
    android:background="@drawable/back"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_above="@+id/editTextMessage"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="27dp"/>

  <EditText
    android:id="@+id/editTextMessage"
    android:layout_width="356dp"
    android:layout_height="50dp"
    android:hint="@string/hint_message_txt"
    android:inputType="textAutoComplete"
    android:background="@drawable/back"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_above="@+id/maxMsgsText"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="41dp"/>

  <CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/checkbox_text"
    android:id="@+id/notify_checkBox"
    android:checked="true"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="27dp"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/max_msgs"
    android:id="@+id/maxMsgsText"
    android:textColor="#111111"
    android:layout_above="@+id/editTextMax"
    android:layout_centerHorizontal="true"/>

  <EditText
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/editTextMax"
    android:background="@drawable/back"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_above="@+id/notify_checkBox"
    android:layout_alignLeft="@+id/notify_checkBox"
    android:layout_alignStart="@+id/notify_checkBox"
    android:layout_marginBottom="35dp"
    android:layout_alignRight="@+id/notify_checkBox"
    android:layout_alignEnd="@+id/notify_checkBox"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/select_hour"
    android:id="@+id/hourText"
    android:textColor="#111111"
    android:layout_below="@+id/active_switch"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="37dp"/>

  <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btn_hour"
    android:src="@drawable/ic_alarm_black_24dp"
    android:background="#ffffff"
    android:contentDescription="@string/btn_save"
    android:layout_below="@+id/hourText"
    android:layout_alignLeft="@+id/active_switch"
    android:layout_alignStart="@+id/active_switch"
    android:layout_alignRight="@+id/active_switch"
    android:layout_alignEnd="@+id/active_switch"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/select_day"
    android:id="@+id/dateText"
    android:textColor="#111111"
    android:layout_above="@+id/btn_hour"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

  <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btn_date"
    android:src="@drawable/ic_date_range_black_24dp"
    android:background="#ffffff"
    android:contentDescription="@string/btn_save"
    android:layout_below="@+id/dateText"
    android:layout_alignBottom="@+id/btn_hour"
    android:layout_toLeftOf="@+id/editTextMax"
    android:layout_alignLeft="@+id/maxMsgsText"
    android:layout_alignStart="@+id/maxMsgsText"/>

</RelativeLayout>
